// Write a program to calculate average of three integers. Numbers are given by the user. 

#include<stdio.h>
#include<conio.h>

    void main()
{
    int a,b,c;
    float avg;                                                          
    printf("Enter 3 integers ");
    scanf("%d%d%d",&a,&b,&c);       
        avg=(a+b+c)/3.0;
        printf("Average of three integers %.3f",avg);
    getch();
}
