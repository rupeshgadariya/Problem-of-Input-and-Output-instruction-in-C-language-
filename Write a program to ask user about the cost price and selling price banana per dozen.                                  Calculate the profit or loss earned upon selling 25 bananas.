/* Write a program to ask user about the cost price and selling price banana per dozen.                     
            Calculate the profit or loss earned upon selling 25 bananas.*/
 
 #include<stdio.h>
 #include<conio.h>
 
    void main()
 {
        int cost_price, selling_price;                  //a=60 b=72
        float cost_one_banana,selling_one_banana;
        printf("\nWhat is cost price banana per dozen ");
        scanf("%d",&cost_price);
        printf("What is selling price banana per dozen ");
        scanf("%d",&selling_price);

        cost_one_banana = cost_price/12.0;                                   // 1bn =5 
        selling_one_banana = selling_price/12.0;                              // 1bn = 6

        cost_one_banana = cost_one_banana * 25;                         // 125 rs
        selling_one_banana = selling_one_banana * 25;                   // 150 rs
        
       printf("\nThe profit or loss earned upon selling 25 bananas = %.2f rupees\n",
       selling_one_banana - cost_one_banana);
             getch();
 }
